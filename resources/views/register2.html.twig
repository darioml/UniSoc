{% extends 'layout.html.twig' %}
{% set active = 'account' %}

{% block content %}
 <div class="ui segment">
		<div class="ui large steps" id="register-steps">
			  <div class="ui step" >
				Register
			  </div>
			  <div class="ui active step">
				Create Soc
			  </div>
			  <div class="ui disabled step">
				Add Members
			  </div>
			  <div class="ui disabled step">
				Complete
			  </div>
		</div>
		 <div class="ui fluid form segment " id="register-form">
		 <form action="{{ path(app.request.attributes.get('_route')) }}" method="POST">
			  <h3 class="ui header">Set Up Your Society</h3>
				<div class="field">
				  <label>Society Name</label>
				  <input placeholder="Society Name" name="Society_Name"type="text">
				</div>
			<div class="field">
			  <label>University</label>
			  <div class="ui selection dropdown field">
				<input type="hidden" name="University">
				  <div class="text">University</div>
				  <i class="dropdown icon"></i>
				  <div class="menu">
					{% for college in colleges %}
					<div class="item" data-value="{{college.cid}}">{{college.name}}</div>
				  	{% endfor %}
				  </div>
				</div>
			  </div>
			  <div class="field">
				  <label>Society Webpage</label>
				  <input placeholder="www.ExampleSociety.com" name="Society_Webpage"type="text">
			</div>
			  <div class="inline field segment">
				<div class="ui checkbox">
				  <input type="checkbox" id="terms">
				  <label for="terms"></label>
				</div>
				<label>I want to receive notification about this Society</label>
			  </div>
			   <div class="ui blue submit button">Submit</div>
			   <div style="display: none;"><input id="submitFormButton" type="submit"></div>
			</form>
			</div>
	
	</div>		
{% endblock %}


{% block pagejs %}
<script>
        $('.ui.form')
          .form({
            email: {
              identifier  : 'email',
              rules: [
                {
                  type   : 'email',
                  prompt : 'Please enter a valid email'
                }
              ]
            }
          }, {
            inline: true,
            onSuccess: function() {
                $("#submitFormButton").trigger('click');
            }
          })
        ;
</script>
{% endblock %}
